	<select id="getPaymentByClass" parameterClass="com.ve.tradecenter.core.domain.PaymentDO" resultMap="BaseResultMap">
		select
		<include refid="payment.Base_Column_List" />
		from payment  where class_name = #className#  and is_delete = 0 and is_active = 1
