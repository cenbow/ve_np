  <insert id="addPayment" parameterClass="com.ve.tradecenter.core.domain.PaymentDO">
    insert into payment
    <dynamic prepend="(">
      <isNotNull prepend="," property="id">
        id
      </isNotNull>
      <isNotNull prepend="," property="className">
        class_name
      </isNotNull>
      <isNotNull prepend="," property="isEffect">
        is_effect
      </isNotNull>
      <isNotNull prepend="," property="onlinePay">
        online_pay
      </isNotNull>
      <isNotNull prepend="," property="feeAmount">
        fee_amount
      </isNotNull>
      <isNotNull prepend="," property="name">
        name
      </isNotNull>
      <isNotNull prepend="," property="desc">
        desc
      </isNotNull>
      <isNotNull prepend="," property="totalAmount">
        total_amount
      </isNotNull>
      <isNotNull prepend="," property="logo">
        logo
      </isNotNull>
      <isNotNull prepend="," property="sort">
        sort
      </isNotNull>
      <isNotNull prepend="," property="feeType">
        fee_type
      </isNotNull>
      <isNotNull prepend="," property="isPc">
        is_pc
      </isNotNull>
      <isNotNull prepend="," property="isWap">
        is_wap
      </isNotNull>
      <isNotNull prepend="," property="isApp">
        is_app
      </isNotNull>
      <isNotNull prepend="," property="key">
        key
      </isNotNull>
      <isNotNull prepend="," property="config">
        config
      </isNotNull>
      )
    </dynamic>
    values
    <dynamic prepend="(">
      <isNotNull prepend="," property="id">
        #id:BIGINT#
      </isNotNull>
      <isNotNull prepend="," property="className">
        #className:VARCHAR#
      </isNotNull>
      <isNotNull prepend="," property="isEffect">
        #isEffect:TINYINT#
      </isNotNull>
      <isNotNull prepend="," property="onlinePay">
        #onlinePay:TINYINT#
      </isNotNull>
      <isNotNull prepend="," property="feeAmount">
        #feeAmount:BIGINT#
      </isNotNull>
      <isNotNull prepend="," property="name">
        #name:VARCHAR#
      </isNotNull>
      <isNotNull prepend="," property="desc">
        #desc:VARCHAR#
      </isNotNull>
      <isNotNull prepend="," property="totalAmount">
        #totalAmount:BIGINT#
      </isNotNull>
      <isNotNull prepend="," property="logo">
        #logo:VARCHAR#
      </isNotNull>
      <isNotNull prepend="," property="sort">
        #sort:INTEGER#
      </isNotNull>
      <isNotNull prepend="," property="feeType">
        #feeType:TINYINT#
      </isNotNull>
      <isNotNull prepend="," property="isPc">
        #isPc:TINYINT#
      </isNotNull>
      <isNotNull prepend="," property="isWap">
        #isWap:TINYINT#
      </isNotNull>
      <isNotNull prepend="," property="isApp">
        #isApp:TINYINT#
      </isNotNull>
      <isNotNull prepend="," property="key">
        #key:VARCHAR#
      </isNotNull>
      <isNotNull prepend="," property="config">
        #config:LONGVARCHAR#
      </isNotNull>
      )
    </dynamic>
  </insert>

	<update id="deletePayment" parameterClass="long">
		update payment set is_delete = 1
			where id = #value# and is_delete = 0
	</update>
