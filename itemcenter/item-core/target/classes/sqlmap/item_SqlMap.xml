      </isNotNull>
      <isNotNull prepend="," property="isSellerPost" >
        is_seller_post
      </isNotNull>
      <isNotNull prepend="," property="isDeleted" >
        is_deleted
      </isNotNull>
      <isNotNull prepend="," property="gmtCreated" >
