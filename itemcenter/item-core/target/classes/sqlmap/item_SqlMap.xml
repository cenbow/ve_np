    </dynamic>
    values
    <dynamic prepend="(" >
      <isNotNull prepend="," property="id" >
        #id:INTEGER#
      </isNotNull>
      <isNotNull prepend="," property="itemName" >
        #itemName:VARCHAR#
      </isNotNull>
      <isNotNull prepend="," property="itemBriefName" >
